# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# A home controller showing a home page and search projects by search terms.
GET        /                                 controllers.HomeController.index
GET        /project/:searchTerms             controllers.HomeController.searchLatestTenProjects(searchTerms: String)
GET        /project/job/:jobId               controllers.HomeController.findProjectsByJobId(jobId: Long)
GET        /stats/global/:searchTerms        controllers.HomeController.getGlobalStats(searchTerms: String)
GET        /stats/single/:projectDesc        controllers.HomeController.getProjectStats(projectDesc: String)
GET        /project/readability/:projectDesc controllers.HomeController.computeProjectReadability(projectDesc: String)
GET        /project/readability/average/:searchTerms controllers.HomeController.computeProjectReadability(searchTerms: String)
GET        /user/:userId                     controllers.HomeController.userProfile(userId: String, request: Request)
GET        /wsUser                             controllers.HomeController.wsFindUser
GET        /user/:userId/projects            controllers.HomeController.findUserProjectsById(userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                     controllers.Assets.versioned(path="/public", file: Asset)
