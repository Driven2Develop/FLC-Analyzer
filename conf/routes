# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# A home controller showing a home page and search projects by search terms.
GET     /                           controllers.HomeController.index
GET     /project/:searchTerms       controllers.HomeController.searchLatestTenProjects(searchTerms : String)

# This controller searches projects by job id
GET     /project/job/:jobId         controllers.ProjectController.findProjectsByJobId(jobId : Long)

# User controller
GET     /user/:userId               controllers.UserController.findUserById(userId: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
